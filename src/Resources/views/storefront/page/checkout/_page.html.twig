{% sw_extends '@Storefront/storefront/page/checkout/_page.html.twig' %}


{% block base_flashbags_checkout %}
	{{ parent() }}
	
	{% if 'NovalnetApplePay' in context.paymentMethod.handlerIdentifier and context.customer is not null and app.request.get('_route') == 'frontend.checkout.confirm.page' %}
		<div class="flashbags nn-apple-pay-error-message">
			{% sw_include '@Storefront/storefront/utilities/alert.html.twig' with { type: "info", content: "NovalnetPayment.text.applepayErrorMessage"|trans|sw_sanitize } %}
        </div>
	{% endif %}
{% endblock %}
